@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>SteadyRain Skills Assesment</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="style.css">
    <script src="./index.js" type="module"></script>
</head>
<header class="header">
    <img src="./steadyrainbanner.PNG">
</header>
<body>
    <div class="mainView" id="mainView">
        <label>Students</label>
        <div class="gridControlsContainer" id="gridControlsContainer">
            <button id="addStudentBtn">Add Student</button>
            <label for="schoolSelector">School: </label>
            <select id="schoolSelector">
            </select>
            <label for="studentsGridSearchInput">Search: (Name,School,Major)</label>
            <input id="studentsGridSearchInput"></input>
            <button id="deleteStudentBtn">Delete</button>
        </div>

        <div class="gridContainer" id="studentsGridContainer">
            <table id="studentsTable">
                <thead>
                    <tr>
                        <th class="th">Select</th>
                        <th class="th">Name</th>
                        <th class="th">School</th>
                        <th class="th">Major</th>
                        <th class="th">Date Modified</th>
                        <th class="th">Active</th>
                        <th hidden></th>
                        <th hidden></th>
                    </tr>
                </thead>
                <tbody id="studentsTableBody">
                </tbody>
            </table>
        </div>
    </div>


    <div class="adminView" id="adminView" style="display: none;">
        <label>Admin</label>
        <div>
            <label for="addSchoolForm">Add School: </label>
            <form id="addSchoolForm">
                <label for="schoolNameInput">School Name: </label>
                <input type="text" id="schoolNameInput" />

                <label for="schoolAddress1Input">Address 1: </label>
                <input type="text" id="schoolAddress1Input" />

                <label for="schoolAddress2Input">Address 2: </label>
                <input type="text" id="schoolAddress2Input" />

                <label for="schoolCityInput">City: </label>
                <input type="text" id="schoolCityInput" />

                <label for="schoolZipInput">Zip Code: </label>
                <input type="text" id="schoolZipInput" />

                <button type="submit" id="addSchoolBtn">Add School</button>
            </form>
        </div>
    </div>

    <div id="addStudentsModal" class="modal" method="post">
        <div class="modal-content">
            <label>Add Student</label>
            <form id="addStudentForm">
                <label for="firstNameInput">First Name</label>
                <input type="text" id="firstNameInput"></input>
                <label for="lastNameInput">Last Name</label>
                <input type="text" id="lastNameInput"></input>
                <label for="schoolSelectorModal">School</label>
                <select id="schoolSelectorModal">
                </select>
                <label for="majorInput">Major</label>
                <input type="text" id="majorInput"></input>
                <label for="isActiveCheckbox">Active</label>
                <input type="checkbox" id="isActiveCheckbox"></input>
                <span id="studentIdValueSpan" hidden></span>
                <button type="submit" id="addEditStudentsBtn">Save</button>
            </form>
        </div>
    </div>
</body>
</html>

